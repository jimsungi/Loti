<UserControl x:Class="TigerL10N.Control.TextBoxExt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TigerL10N.Control"
             mc:Ignorable="d" 
             x:Name="tbe"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock  HorizontalAlignment="Stretch" Margin="5,0,0,0"  Background="Wheat"  Text="{Binding Path=BigText, ElementName=tbe}" VerticalAlignment="Stretch" Foreground="Black" FontSize="100"/>

</Grid>
</UserControl>
