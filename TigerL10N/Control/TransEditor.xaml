<UserControl x:Class="TigerL10N.Control.TransEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TigerL10N.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="teEdit">
    <Grid Background="Wheat">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Label>Reference :</Label>
        <Label Grid.Column="2">Information :</Label>
        <TextBox Margin="2,30,5,5"></TextBox>
        <StackPanel Margin="2,30,5,5" Grid.Column="3" Background="White">
            <StackPanel Orientation="Horizontal">
                <Label>Language:</Label>
                <Label>Korea to English</Label>
            </StackPanel>
        </StackPanel>
        <TextBox Margin="2" IsReadOnly="True" MinLines="50" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"/>
        <TextBox Margin="2" MinLines="50" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"/>
    </Grid>
</UserControl>
