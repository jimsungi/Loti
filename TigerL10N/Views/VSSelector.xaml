<Window x:Class="TigerL10N.Views.VSSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TigerL10N.Views"
        mc:Ignorable="d"
        Title="Select Visual Studio" Height="126" Width="388" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="VisualStudioInstancesComboBox"
                  DisplayMemberPath="DisplayName"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Width="300" Margin="0,0,0,0"/>
        <Button HorizontalAlignment="Center" Width="180" Height="20" VerticalAlignment="Center" Grid.Row="1" Click="Button_Click">OK</Button>
    </Grid>
</Window>
